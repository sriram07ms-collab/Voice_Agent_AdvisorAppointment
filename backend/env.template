# Server Configuration
PORT=3001
NODE_ENV=development

# Groq AI Configuration
# Get your API key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# Session Configuration
SESSION_TIMEOUT_MINUTES=30

# Timezone
DEFAULT_TIMEZONE=Asia/Kolkata

# MCP Integration (Phase 2)
# Set to 'true' to enable MCP integrations (requires Google Cloud setup)
MCP_ENABLED=false

# Google Cloud Configuration
# Path to service account JSON file (relative to backend directory)
GOOGLE_SERVICE_ACCOUNT_PATH=./config/google-service-account.json

# Google Calendar Configuration
# Calendar ID (found in calendar settings, usually ends with @group.calendar.google.com)
GOOGLE_CALENDAR_ID=your_calendar_id@group.calendar.google.com

# Google Sheets Configuration
# Sheet ID (from URL: https://docs.google.com/spreadsheets/d/{SHEET_ID}/edit)
GOOGLE_SHEET_ID=your_sheet_id_here
GOOGLE_SHEET_NAME=Sheet1

# Gmail Configuration
# Email address to send drafts to
GMAIL_USER_EMAIL=advisor@groww.in
# Email address to send drafts from
GMAIL_FROM_EMAIL=noreply@groww.in

# Option 1: OAuth2 (for personal Gmail accounts)
# Get these from Google Cloud Console → APIs & Services → Credentials → OAuth 2.0 Client ID
GMAIL_OAUTH2_CLIENT_ID=your_oauth2_client_id_here
GMAIL_OAUTH2_CLIENT_SECRET=your_oauth2_client_secret_here
GMAIL_OAUTH2_REDIRECT_URI=http://localhost:3001/api/auth/gmail/callback

# Option 2: Domain-wide Delegation (for Google Workspace only)
# Set to 'true' if domain-wide delegation is configured in Google Workspace
# This allows the service account to impersonate GMAIL_USER_EMAIL
GMAIL_USE_DELEGATION=false

# Voice Integration (Phase 3)
# Voice services use ElevenLabs as primary, with Groq as automatic fallback when quota is exceeded

# Text-to-Speech Provider Configuration
# Options: 'elevenlabs', 'groq', or 'auto' (default: 'auto')
# 'auto' will use ElevenLabs if API key is set, otherwise fallback to Groq
# When ElevenLabs quota is exceeded, automatically falls back to Groq TTS
TTS_PROVIDER=auto

# Speech-to-Text Provider Configuration
# Options: 'elevenlabs', 'groq', or 'auto' (default: 'auto')
# 'auto' will use ElevenLabs if API key is set, otherwise fallback to Groq
# When ElevenLabs quota is exceeded, automatically falls back to Groq STT
# Note: Streaming STT is not available with Groq (use chunked requests instead)
STT_PROVIDER=auto

# ElevenLabs Configuration (Optional - for better voice quality and transcription)
# Get your API key from: https://elevenlabs.io/ (Free tier: 10,000 credits/month)
# Free tier includes:
#   - ~10 minutes of TTS audio per month
#   - ~2.5 hours of STT transcription per month
# Perfect for personal/portfolio projects
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ElevenLabs Voice ID (Optional - defaults to Rachel voice, for TTS only)
# Find available voices at: https://elevenlabs.io/app/voice-library
# Popular voices: Rachel (21m00Tcm4TlvDq8ikWAM), Antoni (ErXwobaYiN019PkySvjV), Bella (EXAVITQu4vr4xnSDxMaL)
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# ElevenLabs TTS Model ID (Optional - defaults to multilingual v2)
ELEVENLABS_MODEL_ID=eleven_multilingual_v2

# ElevenLabs STT Model ID (Optional - defaults to scribe_v1)
ELEVENLABS_STT_MODEL_ID=scribe_v1

# Groq Voice Configuration (Fallback when ElevenLabs quota is exceeded)
# Groq is automatically used as fallback when ElevenLabs quota/rate limit is exceeded

# Groq Voice API Key (Optional - for STT/TTS services)
# If set, this key will be used specifically for voice services (STT/TTS)
# If not set, will fallback to GROQ_API_KEY (configured above)
# This allows you to use separate keys for voice vs LLM services for quota isolation
GROQ_VOICE_API_KEY=your_groq_voice_api_key_here

# Groq STT Model (Optional - defaults to whisper-large-v3-turbo)
# Options: whisper-large-v3-turbo (fast, $0.04/hour) or whisper-large-v3 (accurate, $0.111/hour)
GROQ_STT_MODEL=whisper-large-v3-turbo

# Groq TTS Model (Optional - defaults to canopylabs/orpheus-v1-english)
# NOTE: This model requires terms acceptance at: https://console.groq.com/playground?model=canopylabs%2Forpheus-v1-english
# If you haven't accepted the terms, you'll get a model_terms_required error
GROQ_TTS_MODEL=canopylabs/orpheus-v1-english

# Groq TTS Voice (Optional - defaults to diana)
# Available voices: autumn, diana, hannah (female), austin, daniel, troy (male)
# diana: female voice, good for Indian English
GROQ_TTS_VOICE=diana


